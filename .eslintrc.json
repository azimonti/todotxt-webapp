{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    "semi": ["error", "always"]
  },
  "globals": {
    "$": "readonly",
    "bootstrap": "readonly",
    "i18next": "readonly",
    "Dropbox": "readonly",
    "katex": "readonly",
    "showNotification": "readonly"
  }
}
